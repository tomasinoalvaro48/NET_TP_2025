@using DTOs
@using API.Clients
@using API.Clients.EntitiesClients;
@inject IJSRuntime JSRuntime

@if (showModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        @(mode == FormMode.Add ? "Agregar Anomalia" : "Editar Anomalia")
                    </h5>
                    <button type="button" class="btn-close" @onclick="Close"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="currentTipoAnomalia" OnValidSubmit="HandleValidSubmit">
                        <DataAnnotationsValidator />

                        @if (mode == FormMode.Update)
                        {
                            <div class="mb-3">
                                <label class="form-label">Cod_anom</label>
                                <input type="text" class="form-control" value="@currentTipoAnomalia.Cod_anom" readonly />
                            </div>
                        }

                        <div class="mb-3">
                            <label class="form-label">Nombre_anom *</label>
                            <InputText @bind-Value="currentTipoAnomalia.Nombre_anom" class="form-control" />
                            @if (validationErrors.ContainsKey("Nombre_anom"))
                            {
                                <div class="text-danger small">@validationErrors["Nombre_anom"]</div>
                            }
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Dif_anom *</label>
                            <InputNumber @bind-Value="currentTipoAnomalia.Dif_anom" class="form-control" />
                            @if (validationErrors.ContainsKey("Dif_anom"))
                            {
                                <div class="text-danger small">@validationErrors["Dif_anom"]</div>
                            }
                        </div>

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger">
                                @errorMessage
                            </div>
                        }

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="Close">Cancelar</button>
                            <button type="submit" class="btn btn-primary" disabled="@saving">
                                @(saving ? "Guardando..." : mode == FormMode.Add ? "Agregar" : "Actualizar")
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public EventCallback OnTipoAnomaliaChanged { get; set; }

    private bool showModal = false;
    private FormMode mode = FormMode.Add;
    private TipoAnomaliaDTO currentTipoAnomalia = new();
    private bool saving = false;
    private string errorMessage = string.Empty;
    private Dictionary<string, string> validationErrors = new();

    public enum FormMode
    {
        Add,
        Update
    }

    public Task ShowAddModal()
    {
        mode = FormMode.Add;
        currentTipoAnomalia = new TipoAnomaliaDTO();
        ClearValidationErrors();
        showModal = true;
        StateHasChanged();
        return Task.CompletedTask;
    }

    public Task ShowEditModal(TipoAnomaliaDTO tipo_anomalia)
    {
        mode = FormMode.Update;
        currentTipoAnomalia = new TipoAnomaliaDTO
            {
                Cod_anom = tipo_anomalia.Cod_anom,
                Nombre_anom = tipo_anomalia.Nombre_anom,
                Dif_anom = tipo_anomalia.Dif_anom
            };
        ClearValidationErrors();
        showModal = true;
        StateHasChanged();
        return Task.CompletedTask;
    }

    private async Task HandleValidSubmit()
    {
        if (!Validate())
            return;

        try
        {
            saving = true;
            errorMessage = string.Empty;

            if (mode == FormMode.Add)
                await TipoAnomaliaApiClient.AddAsync(currentTipoAnomalia);
            else
                await TipoAnomaliaApiClient.UpdateAsync(currentTipoAnomalia);

            await OnTipoAnomaliaChanged.InvokeAsync();
            Close();
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            saving = false;
        }
    }

    private bool Validate()
    {
        ClearValidationErrors();
        bool isValid = true;

        if (string.IsNullOrWhiteSpace(currentTipoAnomalia.Nombre_anom))
        {
            validationErrors["Nombre_anom"] = "El nombre es requerido";
            isValid = false;
        }

        if (currentTipoAnomalia.Dif_anom <= 0)
        {
            validationErrors["Dif_anom"] = "La dificultad debe ser mayor que 0";
            isValid = false;
        }

        StateHasChanged();
        return isValid;
    }

    private void ClearValidationErrors()
    {
        validationErrors.Clear();
        errorMessage = string.Empty;
    }

    private void Close()
    {
        showModal = false;
        StateHasChanged();
    }
}